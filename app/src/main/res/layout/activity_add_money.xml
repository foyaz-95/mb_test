<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"
                  tools:context=".LoginActivity"
                  android:background="@color/colorPrimary">


    <EditText
            android:id="@+id/tv_acc_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:inputType="none"
            android:focusable="false"
            android:text="Name"
            android:clickable="false"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:selectAllOnFocus="false"
            android:linksClickable="false"
            style="@style/Widget.Moneybox.EditText"
            />
    <TextView
            android:id="@+id/tv_plan_val"
            android:text="Plan Value: "
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_acc_name"
            android:layout_marginTop="30dp"
            style="@style/Widget.Moneybox.EditText"
            android:background="@null"
    />
    <TextView
            android:id="@+id/tv_moneybox_val"
            android:text="Moneybox: "
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_plan_val"
            android:layout_marginTop="10dp"
            style="@style/Widget.Moneybox.EditText"
            android:background="@null"
    />
    <Button
            android:id="@+id/btn_add_ten"
            android:text="Add Â£10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            style="@style/Widget.Button.Colored.Rounded"
            app:layout_constraintTop_toBottomOf="@id/tv_moneybox_val"
            android:layout_marginTop="50dp"
    />
</android.support.constraint.ConstraintLayout>